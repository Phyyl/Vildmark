<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="Vildmark.Graphics.Fonts.props" />

    <ItemGroup>
        <None Remove="Resources\Fonts\Bouncy.otf" />
        <None Remove="tools\linux\fontbm" />
        <None Remove="tools\windows\bz2.dll" />
        <None Remove="tools\windows\fontbm.exe" />
        <None Remove="tools\windows\freetype.dll" />
        <None Remove="tools\windows\libpng16.dll" />
        <None Remove="tools\windows\zlib1.dll" />
    </ItemGroup>

    <ItemGroup>
