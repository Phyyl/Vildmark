    </ItemGroup>

    <ItemGroup>
        <None Include="Vildmark.Graphics.Fonts.props">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>build\$(TargetFramework)</PackagePath>
            <Pack>True</Pack>
        </None>
        <None Include="Vildmark.Graphics.Fonts.targets">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>build\$(TargetFramework)</PackagePath>
            <Pack>True</Pack>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Vildmark.Core\Vildmark.Core.csproj" />
        <ProjectReference Include="..\Vildmark.Graphics\Vildmark.Graphics.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="tools\macos\" />
    </ItemGroup>

    <ItemGroup>
        <Font Include="Resources\Fonts\Bouncy.otf" />
    </ItemGroup>

    <Import Project="Vildmark.Graphics.Fonts.targets" />

</Project>
